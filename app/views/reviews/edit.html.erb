
<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        review内容編集
      </h1>
    </div>
  </div>
</section>

<% if @review.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @review do |f| %>
          <div class="field">
            <%= f.label :title, "title", class: "label "%>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "レビュー", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image %>
            <%#= f.attachment_field :image %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>